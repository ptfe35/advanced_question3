<div class="container">
  <div class="row">
    <% if @book.errors.any? %>
    <div class="text-danger">
      <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-xs-3">
      <%= render 'template/user_info', user: @user %>
      <%= render 'template/new_book', book: @book %>
    </div>
    <div class="col-xs-9">
      <h2>Users</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td style="width:30%"><%= attachment_image_tag user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg", class: "pull-left profile-thumb" %></td>
            <td style="width:50%"><%= user.name %></td>
            <td style="width:20%"><%= link_to user_path(user.id) do %>Show<% end %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
